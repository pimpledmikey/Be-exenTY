    font-weight: bold !important;
    color: #000000 !important;
    font-size: 11px !important;
    text-transform: uppercase !important;
    letter-spacing: 0.5px !important;
  }
  
  /* Configuración de página */
  @page {
    size: A4 !important;
    margin: 15mm 10mm 15mm 10mm !important;
    orphans: 3 !important;
    widows: 3 !important;
  }
  
  /* Forzar salto de página si es necesario */
  .page-break {
    page-break-before: always !important;
  }
  
  /* Evitar cortes en elementos importantes */
  .documento-header,
  .info-general,
  .tabla-container,
  .observaciones-section,
  .firmas-section {
    page-break-inside: avoid !important;
  }
  
  /* Mejoras específicas para elementos */
  h1, h2, h3, h4, h5, h6 {
    page-break-after: avoid !important;
    color: #000000 !important;
  }
  
  /* Espaciado mejorado */
  .tabla-articulos tbody tr {
    page-break-inside: avoid !important;
  }
  
  /* Texto más legible */
  strong, b {
    font-weight: 700 !important;
    color: #000000 !important;
  }
  
  /* Eliminación completa de elementos no necesarios */
  button, .btn, .d-print-none, .no-print {
    display: none !important;
    visibility: hidden !important;
  }
}

/* Responsive para pantallas pequeñas */
@media (max-width: 768px) {
  .solicitud-container {
    padding: 10px;
    max-height: calc(100vh - 100px);
  }
  
  .solicitud-documento {
    padding: 15px;
  }
  
  .documento-header {
    flex-direction: column;
    text-align: center;
    padding: 20px 15px;
  }
  
  .header-info {
    margin-left: 0;
    margin-top: 15px;
  }
  
  .info-general {
    grid-template-columns: 1fr;
  }
  
  .tabla-container {
    max-height: 300px;
    font-size: 12px;
  }
  
  .firmas-section {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .botones-accion {
    flex-direction: column;
    align-items: center;
  }
}
